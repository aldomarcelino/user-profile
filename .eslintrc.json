{
  "env": {
    "browser": true,
    "es2024": true,
    "jest/globals": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 14,
    "sourceType": "module"
  },
  "plugins": ["react", "jest"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["@mui/material/*/*/*", "!@mui/material/test-utils/*"]
      }
    ],

    "no-console": "off"
  },
  "globals": {
    "React": "writable"
  }
}
